<body data-gr-c-s-loaded="true">
  <div class="container-scroller">
    <!-- partial:../../partials/_navbar.html -->
    <% include ../../partials/_navbar %>
    <!-- partial -->

    <div class="container-fluid page-body-wrapper">

    <!-- partial:../../partials/_sidebar.html -->
    <% include ../../partials/_sidebar %>
    <!-- partial -->

    <style>
    .report-menu {
      height: 40vh;
    }

    .report-body {
      position: fixed;
      top: 100px;
      left: 2vw;
      width: 96vw;
      height: 85vh;
      background-color: white;
      box-shadow: 5px 10px 18px #6d6969;
    }

    .report-body table tbody {
      height: calc(75vh - 90px);
      padding: 0px;
      overflow-y: auto;
    }

    .report-menu-bottom {
      height: calc(60vh - 69px);
      background-color: rgba(248,248,248, 0.9);
      border-bottom: 15px solid #2196f3;
    }

    .report-body .report-body-title-center input {
      padding: 0.5em;
      border-radius: 7px;
      width: 250px;
      font-weight: 500;
      font-size: 18px;
      color: #2196f3;
      position: fixed;
      right: 7vw;
    }

    .report-list-category {
      margin-left: 55px;
      margin-top: 5px;
    }

    .report-body table tbody {
      height: calc(75vh - 80px);
      padding: 0px;
      width: 99%;
      overflow-y: auto;
    }

    #display-report tr {
      font-size: 14px;
      cursor: auto;
    }
    </style>
    <div class="main-panel">
      <div class="content-wrapper"> 
          <div class="row report-menu">
          <!-- add content -->
          </div>
          <div class="report-body pl-5 pr-5 pt-4 pb-4">
            <div class="row report-body-title">
              <div class="report-body-title-left">
                  <h2 class="text-info font-weight-bold">
                      Inventory
                  </h2>
              </div>

              <div class="report-list-category">
                  <select class="custom-select " name="" id="category">
                      <option class="font-weight-bold" value="0" selected>
                          All Categories
                      </option>
                  </select>
              </div>

              <div class="report-list-category">
                  <select class="custom-select " name="" id="supplier">
                      <option class="font-weight-bold" value="0" selected>
                          All Supplier
                      </option>
                  </select>
              </div>
              
              <div class="report-body-title-center">
                  <input type="text" id="table-search" placeholder="Search">
              </div>
          </div>
        <div class="report-body-content">
            <span class="text-dark font-weight-bold p-0">
                <strong>
                Period
                </strong>
            </span>
            <hr class="p-0 m-0 text-info" style="border-top: 3px solid #03a9f4!important;">
            
            <table class="table table-fixed table-hover m-0" id="report-table">
                <thead>
                    <tr>
                        <th onclick="sortColumn(1)"
                            class="text-dark font-weight-bold p-1 sortStyle" 
                            style="width: 10%;">
                            Reference
                        </th>
                        <th onclick="sortColumn(2)"
                            class="text-dark font-weight-bold p-1 sortStyle"
                            style="width: 30%;">
                            Name
                        </th>
                        <th onclick="sortColumn(3)"
                            class="text-dark font-weight-bold p-1 sortStyle" 
                            style="width: 8%;">
                            Retail Price
                        </th>
                        <th onclick="sortColumn(4)"
                            class="text-dark font-weight-bold p-1 sortStyle" 
                            style="width: 8%;">
                            QTY S
                        </th>
                        <th onclick="sortColumn(5)"
                            class="text-dark font-weight-bold p-1 sortStyle" 
                            style="width: 8%;">
                            QTY W
                        </th>
                        <th onclick="sortColumn(6)"
                            class="text-info text-center font-weight-bold p-1 sortStyle" 
                            style="width: 4%;">
                            15
                        </th>
                        <th onclick="sortColumn(7)"
                            class="text-info text-center font-weight-bold p-1 sortStyle" 
                            style="width: 4%;">
                            30
                        </th>
                        <th onclick="sortColumn(8)"
                            class="text-info text-center font-weight-bold p-1 sortStyle" 
                            style="width: 4%;">
                            60
                        </th>
                        <th onclick="sortColumn(9)"
                            class="text-info text-center font-weight-bold p-1 sortStyle" 
                            style="width: 4%;">
                            90
                        </th>
                        <th onclick="sortColumn(10)"
                            class="text-info text-center font-weight-bold p-1 sortStyle" 
                            style="width: 4%;">
                            120
                        </th>
                        <th onclick="sortColumn(11)"
                            class="text-info text-center font-weight-bold p-1 sortStyle" 
                            style="width: 4%;">
                            180
                        </th>
                        <th onclick="sortColumn(12)"
                            class="text-info text-center font-weight-bold p-1 sortStyle" 
                            style="width: 4%;">
                            365
                        </th>
                        <th onclick="sortColumn(13)"
                            class="text-danger text-center font-weight-bold p-1 sortStyle" 
                            style="width: 8%;">
                            Stock Days
                        </th>
                    </tr>
                </thead>
                <tbody id="display-report">
                    <!-- Add body dynamically -->
                </tbody>
            </table>
            <div class="form-group" id="pagination">
                <div class="text-center">
                    <span class="font-weight-bold text-info" 
                        id="current-rows"></span>
                    <button type="button"
                        onclick="firstPage()"
                        class="btn btn-info btn-default" 
                        title="PREVIOUS">
                        <i class="material-icons">
                        skip_previous
                        </i>
                    </button>
                    <button type="button"
                        onclick="previousPage()" 
                        class="btn btn-info btn-default" 
                        title="BEFORE">
                        <i class="material-icons">
                        keyboard_arrow_left
                        </i>
                    </button>

                    <input type="text" 
                        id="pagination-display" 
                        value="0000 / 0000" 
                        disabled>

                    <button type="button"
                        onclick="nextPage()"
                        class="btn btn-info btn-default" 
                        title="NEXT">
                        <i class="material-icons">
                        keyboard_arrow_right
                        </i>
                    </button>
                    <button type="button" 
                        onclick="lastPage()"
                        class="btn btn-info btn-default" 
                        title="LAST">
                        <i class="material-icons">
                        skip_next
                        </i>
                    </button>

                    <span class="font-weight-bold text-info" 
                        id="total-rows"></span>
                </div>
            </div>
          </div>
        </div>
        <div class="row report-menu-bottom">
          <div id="modal-content">
              
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->

      <!-- partial:../../partials/_footer.html -->
      <% include ../../partials/_footer %>
      <!-- partial -->
      </div>
    <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->

  <% include ../../partials/_scripts %>

  <script src="app/reports/inventory.js"></script>
</body>